    document.addEventListener("DOMContentLoaded", function () {
        const sidebar = document.getElementById("sticky-sidebar");
        const scrollableContent = document.getElementById("scrollable-content");
        const sidebarContainer = sidebar.parentElement;

        function updateSidebarPosition() {
            if (window.innerWidth < 1024) {
                sidebar.classList.remove("fixed", "top-5", "w-[30%]");
                sidebar.classList.add("relative");
                return;
            }

            const scrollY = window.scrollY;
            const contentRect = scrollableContent.getBoundingClientRect();
            const containerRect = sidebarContainer.getBoundingClientRect();
            const sidebarHeight = sidebar.offsetHeight;
            const viewportHeight = window.innerHeight;

            // Sidebar should stick if there is enough space below
            if (contentRect.top < 0 && containerRect.bottom > sidebarHeight + 20) {
                sidebar.classList.add("fixed", "top-5");
                sidebar.style.width = `${sidebarContainer.offsetWidth}px`; // Ensuring width consistency
            } else {
                sidebar.classList.remove("fixed", "top-5");
                sidebar.style.width = "";
            }

            // If the container bottom is reached, set sidebar to absolute
            if (containerRect.bottom < sidebarHeight + 20) {
                sidebar.classList.remove("fixed", "top-5");
                sidebar.classList.add("absolute", "bottom-0");
            } else {
                sidebar.classList.remove("absolute", "bottom-0");
            }
        }

        window.addEventListener("scroll", updateSidebarPosition);
        window.addEventListener("resize", updateSidebarPosition);
    });

